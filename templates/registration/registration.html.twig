{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/bootstrapWithBackground.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/form-validation.css') }}" rel="stylesheet">
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container col-lg-12 align-content-center">
    <div class="py-12 text-center">
        <h2>Регистрация</h2>
    </div>
    <hr>
    <div class="row justify-content-center col-lg-12 col-xs-7">
        <div class="col-md-4 order-md-2 mb-4">
    {{ form_start(form) }}
    <div class="col-md-12 mb-3 col-lg-12  ">
        {{ form_row(form.surname, {label_attr: {for: 'surname'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.name, {label_attr: {for: 'name'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.fathername, {label_attr: {for: 'fathername'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.email, {label_attr: {for: 'email'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.password, {label_attr: {for: 'password'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.password_conf, {label_attr: {for: 'password_conf'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.born, {label_attr: {for: 'born'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.cities, {label_attr: {for: 'cities'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.school, {label_attr: {for: 'school'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.class, {label_attr: {for: 'class'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.gender, {label_attr: {for: 'gender'} }) }}
    </div>
    <div class="col-md-12 mb-3 col-lg-12 ">
        {{ form_row(form.registration)}}
    </div>
    {{ form_end(form) }}
        </div>
    </div>
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2018 Test Education, все права защищены</p>
    </footer>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery-slim.min.js') }}"><\/script>')</script>
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/holder.min.js') }}"></script>
    <script>
           (function() {
            'use strict';

            window.addEventListener('load', function() {

                var forms = document.getElementsByClassName('needs-validation');

                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
{% endblock %}
